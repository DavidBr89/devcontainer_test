// .devcontainer/devcontainer.json
{
  "name": "AI-Free Environment",
  "build": {
    "dockerfile": "DockerFile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        // Disable Copilot
        "github.copilot.enable": {
          "*": false,
          "plaintext": false,
          "markdown": false,
          "scminput": false,
          "yaml": false,
          "html": false,
          "javascript": false,
          "dart": false,
          "prisma": false,
          "jsonc": false
        },
        "github.copilot.chat.codesearch.enabled": false,
        // Optional: restrict other suggestions
        "editor.quickSuggestions": {
          "other": false,
          "comments": false,
          "strings": false
        },
        "editor.suggest.showWords": false,
        "editor.suggest.showSnippets": false
      },
      "extensions": [
        // DO NOT include Copilot or AI extensions
        // Optionally: preinstall a linter, Prettier, etc.
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "features": {},
  "postCreateCommand": "echo 'âœ… AI tools have been disabled in this container.'"
}
